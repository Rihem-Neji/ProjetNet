@model ProjetNet.Models.ViewModel.RegisterViewModel

@{
    ViewData["Title"] = "Inscription";
}

<div class="container-fluid p-0 overflow-hidden" style="min-height: 100vh;">
    <div class="row g-0 flex-lg-row-reverse">
        <!-- Right Side: Creative Visual (Reverse Order for Variety) -->
        <div class="col-lg-6 d-none d-lg-block position-relative bg-accent">
            <img src="https://images.unsplash.com/photo-1522335789203-abd652322ed3?q=80&w=2587&auto=format&fit=crop" 
                 class="w-100 vh-100" 
                 style="object-fit: cover; opacity: 0.95;" 
                 alt="Community">
            <div class="position-absolute top-0 start-0 w-100 h-100 bg-white" style="opacity: 0.1;"></div>
            <div class="position-absolute top-50 start-50 translate-middle text-center text-white px-5" style="text-shadow: 0 2px 4px rgba(0,0,0,0.5);">
                <h1 class="display-3 fw-bold mb-4" style="text-shadow: 2px 2px 10px rgba(0,0,0,0.3);">Join Us</h1>
                <p class="lead fs-4 text-dark fw-bold" style="text-shadow: none;">Create your account and start your journey.</p>
            </div>
        </div>

        <!-- Left Side: Clean Form -->
        <div class="col-lg-6 d-flex align-items-center justify-content-center bg-white">
            <div class="p-5 w-100" style="max-width: 550px;">
                <div class="mb-5 text-center">
                    <span class="badge bg-secondary text-primary rounded-pill px-3 py-2 mb-3">Sign Up</span>
                    <h2 class="fw-bold text-primary display-6">Créer un Compte</h2>
                    <p class="text-muted">Rejoignez notre communauté aujourd'hui</p>
                </div>

                <form method="post" class="needs-validation">
                    <div class="form-floating mb-3">
                        <input asp-for="FullName" class="form-control bg-light border-0 rounded-3" placeholder="John Doe" style="height: 3.5rem;" />
                        <label class="text-muted">Nom Complet</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control bg-light border-0 rounded-3" placeholder="name@example.com" style="height: 3.5rem;" />
                        <label class="text-muted">Email Address</label>
                    </div>

                    <div class="row g-2 mb-4">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Password" class="form-control bg-light border-0 rounded-3" type="password" placeholder="Password" style="height: 3.5rem;" />
                                <label class="text-muted">Mot de passe</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="ConfirmPassword" class="form-control bg-light border-0 rounded-3" type="password" placeholder="Confirm" style="height: 3.5rem;" />
                                <label class="text-muted">Confirmer</label>
                            </div>
                        </div>
                    </div>

                    <button class="btn btn-primary w-100 py-3 rounded-pill fw-bold fs-5 shadow-lg hover-scale">
                        S'inscrire <i class="fas fa-magic ms-2"></i>
                    </button>

                    <div class="text-center mt-5">
                        <p class="text-muted">Vous avez déjà un compte ? <a href="/Account/Login" class="text-accent fw-bold text-decoration-none ms-1">Se connecter</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

