@model ProjetNet.Models.Product

@{
    ViewData["Title"] = @Model.Name;
}

<div class="container mt-4">

    <div class="row">
        <div class="col-md-6">
            <img src="/images/@Model.ImageUrl" class="img-fluid rounded shadow" />
        </div>

        <div class="col-md-6">
            <h2>@Model.Name</h2>
            <p class="text-muted">@Model.Brand?.Name</p>

            <h3 class="text-price display-6">@Model.Price DT</h3>

            <p>@Model.Description</p>

            <p><strong>Catégorie :</strong> @Model.Category?.Name</p>
            <p><strong>Type de peau :</strong> @Model.SkinType?.Type</p>

            <form method="post" action="/Cart/AddToCart">
                <input type="hidden" name="productId" value="@Model.Id" />
                <div class="mb-3">
                    <label for="quantity" class="form-label">Quantité</label>
                    <input type="number" id="quantity" name="quantity" value="1" min="1" class="form-control" style="width:100px;">
                </div>
                <button class="btn btn-primary btn-lg mt-3">Ajouter au Panier</button>
            </form>
        </div>
    </div>

</div>
