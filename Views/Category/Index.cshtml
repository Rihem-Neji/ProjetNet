@model IEnumerable<ProjetNet.Models.Category>

@{
    ViewData["Title"] = "Catégories";
}

<div class="container mt-4">
    <h2 class="mb-4">Catégories</h2>

    <div class="row">
        @foreach (var c in Model)
        {
            <div class="col-md-3 mb-4">
                <a href="/Category/Products/@c.Id" class="text-decoration-none">
                    <div class="card shadow-sm text-center p-3">
                        <h4>@c.Name</h4>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
