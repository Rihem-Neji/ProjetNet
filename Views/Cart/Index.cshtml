@model IEnumerable<ProjetNet.Models.CartItem>

@{
    ViewData["Title"] = "Panier";
}

<div class="container mt-4">
    <h2>Votre Panier</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info mt-4">
            Votre panier est vide.
        </div>
    }
    else
    {
        <table class="table table-bordered mt-4">
            <tr>
                <th>Produit</th>
                <th>Quantité</th>
                <th>Prix</th>
                <th>Total</th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Product.Price DT</td>
                    <td>@(item.Quantity* item.Product.Price) DT</td>
                    <td>
                        <a class="btn btn-danger" href="/Cart/Remove/@item.Id">Supprimer</a>
                    </td>
                </tr>
            }
        </table>

        <div class="text-end">
            <a href="/Order/Checkout" class="btn btn-success btn-lg">Passer la commande</a>
        </div>
    }
</div>
