@model ProjetNet.Models.ViewModel.AIAgentResponseViewModel
@{
    ViewData["Title"] = "Recommandations IA";
}

<div class="container mt-4 mb-5">
    <div class="row">
        <div class="col-12">
            <a asp-action="Index" class="btn btn-outline-secondary mb-3 shadow-sm">
                <i class="fas fa-arrow-left"></i> Retour au formulaire
            </a>
        </div>
    </div>
    
    <!-- Recommandation IA (texte formaté) -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="ai-card shadow-lg">
                <div class="ai-card-header bg-violet-gradient">
                    <h3 class="mb-0 d-flex align-items-center">
                        <span class="me-3 fs-2">✨</span>
                        <span>Votre Diagnostic Beauté Personnalisé</span>
                    </h3>
                </div>
                <div class="card-body p-0">
                    <div class="ai-recommendation-content">
                        @Html.Raw(Markdig.Markdown.ToHtml(Model.AIRecommendation))
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Produits Recommandés (cartes) -->
    @if (Model.RecommendedProducts.Any())
    {
        <div class="row">
            <div class="col-12 mb-4 text-center">
                <h2 class="display-6 fw-bold" style="color: var(--text-main);">
                    <i class="fas fa-magic me-2" style="color: var(--primary-color);"></i>
                    Votre Sélection Exclusive
                </h2>
                <div class="mx-auto" style="width: 60px; height: 4px; background: var(--primary-color); border-radius: 2px;"></div>
            </div>
            
            @foreach (var product in Model.RecommendedProducts)
            {
                <div class="col-md-4 mb-4">
                    <div class="product-card-premium h-100 shadow-sm border-0">
                        <div class="product-image-container">
                            <img src="~/images/@product.ImageUrl" 
                                 class="card-img-top" 
                                 alt="@product.Name">
                        </div>
                        <div class="card-body d-flex flex-column p-4">
                            <div class="mb-2">
                                <span class="badge rounded-pill bg-light text-primary px-3 py-2 border">@product.Brand?.Name</span>
                            </div>
                            <h5 class="card-title fw-bold mb-3">@product.Name</h5>
                            <p class="card-text text-muted flex-grow-1" style="font-size: 0.95rem;">@product.Description</p>
                            <div class="mt-3 pt-3 border-top d-flex align-items-center justify-content-between">
                                <span class="h4 text-price mb-0">@product.Price.ToString("C")</span>
                                <a asp-controller="Product" 
                                   asp-action="Details" 
                                   asp-route-id="@product.Id" 
                                   class="btn btn-primary px-4">
                                   Détails <i class="fas fa-chevron-right ms-1" style="font-size: 0.8rem;"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
