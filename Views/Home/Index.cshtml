@model IEnumerable<ProjetNet.Models.ViewModel.CategoryPaginationViewModel>
@using Microsoft.AspNetCore.Routing

<div class="container mt-5">

    <!-- Slider principal -->
    <div id="mainSlider" class="carousel slide mb-5" data-bs-ride="carousel">
        <div class="carousel-inner rounded-3 shadow-lg overflow-hidden">
            <div class="carousel-item active">
                <img src="/images/slider/homme.png" class="d-block w-100" style="height: 450px; object-fit: cover;">
                <div class="carousel-caption d-none d-md-block bg-white bg-opacity-75 rounded-pill p-3 shadow-sm">
                    <h5 class="fw-bold text-primary mb-0">Nouvelle Pack</h5>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/images/slider/skincare1.jpg" class="d-block w-100" style="height: 450px; object-fit: cover;">
                <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-3">
                    <h5 class="fw-bold text-white mb-0">Soins & Beauté</h5>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#mainSlider" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true" style="filter: invert(1);"></span>
            <span class="visually-hidden">Précédent</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#mainSlider" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true" style="filter: invert(1);"></span>
            <span class="visually-hidden">Suivant</span>
        </button>
    </div>

    <!-- Barre des catégories horizontale -->
    <div class="mb-5 d-flex flex-wrap gap-2 justify-content-center">
        @foreach (var cat in Model)
        {
            <a href="#category-@cat.Category.Id" class="btn btn-outline-primary rounded-pill px-4">
                @cat.Category.Name
            </a>
        }
    </div>

    <!-- Affichage des produits avec pagination -->
    @foreach(var catVM in Model)
    {
        <div class="mb-5 py-4" id="category-@catVM.Category.Id">
            <div class="d-flex align-items-center mb-4">
                <h3 class="text-uppercase fw-bold m-0 border-start border-4 border-primary ps-3">@catVM.Category.Name</h3>
                <div class="flex-grow-1 ms-3 border-bottom"></div>
            </div>

            <div class="row g-4">
                @foreach (var product in catVM.Products)
                {
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                        <div class="card h-100 overflow-hidden product-card">
                            <div class="position-relative">
                                <img src="/images/@product.ImageUrl" class="card-img-top" style="height: 240px; object-fit: cover;">
                                <div class="position-absolute top-0 end-0 p-2">
                                    <span class="badge bg-primary">Nouveau</span>
                                </div>
                            </div>
                            <div class="card-body d-flex flex-column text-center">
                                <h6 class="card-title fw-bold text-truncate mb-1">@product.Name</h6>
                                <p class="text-muted small mb-3">@product.Brand?.Name</p>
                                
                                <div class="mt-auto">
                                    <p class="fs-5 fw-bold text-primary mb-3">@product.Price DT</p>
                                    <a href="/Product/Details/@product.Id" class="btn btn-primary w-100">
                                        Voir détails
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Pagination pour cette catégorie -->
            <ul class="pagination justify-content-center mt-4">
                @for (int i = 1; i <= catVM.TotalPages; i++)
                {
                    var routeValues = new RouteValueDictionary();
                    routeValues[$"category{catVM.Category.Id}Page"] = i;

                    <li class="page-item @(i == catVM.Page ? "active" : "")">
                        <a class="page-link shadow-none" href="@Url.Action("Index", "Home", routeValues)##category-@catVM.Category.Id">
                            @i
                        </a>
                    </li>
                }
            </ul>
        </div>
    }
</div>
